    <!-- 部落格首頁區塊 -->
  	<section class="full-width blog-hero bezalel-blog"  style="background-color: #F0F0EE;">
        <h1 class="big-title" style="margin-bottom: 0px;padding-top:70px">Blog</h1>
        <h1 id = "sorting" class="lit-title" style="margin-bottom: 0px;padding-top:20px;cursor: pointer;">Oldest Stories ▲</h1>

  	</section>
    <section class="full-width blog-text bezalel-blog"  style="background-color: #F0F0EE;">
        <form id="blog-search-form" method="get" action="/search" class="text-center">
              	<input class="searchBox field" onfocus="this.value=''" value="{{ search.terms | escape }}" type="text" name="q" placeholder="Search" /> 
              	<input type="hidden" name="type" value="article" />
                <input type="submit" class="search-submit" value="&#xf002;">
        </form>
    </section>
    <!-- 文章列表區塊 -->
  	<section class="full-width"  style="background-color: #F0F0EE;">
        <div class="container container-padding">
             	<div class="row">
                  {% for article in blog.articles %}
                  <div class="col-lg-4 col-md-6 col-sm-12">
                    <a class="blog-article" href="{{ article.url }}">
                      
                       <div class="image-wrapper" style="height:200px">
                          <img class="featured-img" src="{{ article.image.src | img_url: '1900x1080',  crop: 'center' }}">
                        </div>
                        
                      <div class="blog-content">
                        <div class="blog-text-wrap">
                          <h3  class="title" style="font-size: 22px;padding-top:20px;margin-bottom: 0px;">{{ article.title }}</h3>
                          <h4 class="time" style="color: gray; margin-bottom: 0px; margin-top: 3px;">{{ article.published_at | date: '%B %e, %Y' }}</h4>
                          <p class="content" style="padding-right:5px;padding-left:5px;font-size:16px;">{{ article.content | strip_html | slice:0,30 }}{% if article.content | strip_html | wordcount > 100 %}...{% endif %}</p> 
                          <h4 class="read-more" style="display: inline-block; width: 150px; background-color: #404040; color: white; text-decoration: none; border-radius: 20px; border: none; outline: none; transition: background-color 0.3s;padding-top: 10px; padding-bottom: 10px;margin-top: 0px;font-size:16px !important;">READ MORE</h4>
                        </div>
                      </div>
                    </a>
                  </div>
                  {% endfor %}
                </div>
                  <!-- 分頁 -->
                  {% if paginate.pages > 1 %}
                  <div class="pagination-wrap">
                      <div class="pagination">
                      {{ paginate | default_pagination | replace: 'Previous', 'Newer' | replace: 'Next', 'Older' }}
                      </div>
                  </div>
                  {% endif %}

                  {% endpaginate %}
          
            </div>

  	</section>

   