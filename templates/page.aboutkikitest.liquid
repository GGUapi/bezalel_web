<script>
  document.addEventListener('DOMContentLoaded', function() {
    var technologyTitles = document.querySelectorAll('.technology-title');
    var moduleIcons = document.querySelectorAll('.module-icon');
    var technologyDescriptions = document.querySelectorAll('.technology-description');
    
    for (var i = 0; i < technologyTitles.length; i++) {
      technologyTitles[i].addEventListener('click', toggleDescription.bind(null, i));
      moduleIcons[i].addEventListener('click', toggleDescription.bind(null, i));
      technologyTitles[i].addEventListener('mouseenter', addPulseAnimation.bind(null, i));
      moduleIcons[i].addEventListener('mouseenter', addPulseAnimation.bind(null, i));
      technologyTitles[i].addEventListener('mouseleave', removePulseAnimation.bind(null, i));
      moduleIcons[i].addEventListener('mouseleave', removePulseAnimation.bind(null, i));
    }

    function toggleDescription(index) {
      for (var i = 0; i < technologyDescriptions.length; i++) {
        if (i === index) {
          technologyDescriptions[i].style.display = 'block';
        } else {
          technologyDescriptions[i].style.display = 'none';
        }
      }
    }

    function addPulseAnimation(index) {
      technologyTitles[index].classList.add('animate__heartBeat');
      moduleIcons[index].classList.add('animate__heartBeat');
    }

    function removePulseAnimation(index) {
      technologyTitles[index].classList.remove('animate__heartBeat');
      moduleIcons[index].classList.remove('animate__heartBeat');
    }
  });
</script>

