{% paginate blog.articles by 9 %}

<div class="new-blog">
  
  	<section class="full-width blog-hero bezalel-blog">
      	<div class="container cf">
          	<h2>BLOG</h2>
          	<h4>Stay up to date on what's happening with&nbsp;BEZALEL.</h4>
          
            <ul>
                <li>
                    <a href="{{ settings.social_twitter }}" target="_blank">                      	
                       <img class="blog-social-icon" src="{{ 'twitter.png' | asset_url }}" />
                    </a>
                </li>
                <li>
                    <a href="{{ settings.social_facebook }}" target="_blank">
                       <img class="blog-social-icon" src="{{ 'facebook.png' | asset_url }}" />
                    </a>
                </li>
                <li>
                    <a href="{{ settings.social_youtube }}" target="_blank">
                       <img class="blog-social-icon" src="{{ 'youtube.png' | asset_url }}" />
                    </a>
                </li>
                <li>
                    <a href="{{ settings.social_instagram }}" target="_blank">
                       <img class="blog-social-icon" src="{{ 'instagram.png' | asset_url }}" />
                    </a>
                </li>
          	</ul>
        
      	</div>
  	</section>
  
  	<section class="full-width">

        <div class="wrapper blog-wrapper">
              
             	<div class="grid-uniform small-gutter"> 
                  
                    {% for article in blog.articles %}

                          <a class="blog-article grid__item one-third medium--one-whole small--one-whole text-center {% unless article.image %} no-image {% endunless %}" href="{{ article.url }}">

                              <div class="featured-img-wrap">
                                
                                	<img class="featured-img" src="{{ article.image.src | img_url: 'grande' }}">
                                
                              </div>

                              <div class="blog-content">

                                  <div class="blog-text-wrap">

                                      <div class="time">{{ article.published_at | date: '%B %e, %Y' }}</div>

                                      <h3>{{ article.title }}</h3>

                                     <!-- <p>{{ article.excerpt_or_content | strip_html | truncatewords: 15 }}</p>-->

                                      <button>Read More</button>

                                  </div>

                              </div>

                          </a>

                    {% endfor %}
  
                  
              	</div>
          
                  {% if paginate.pages > 1 %}
                  <div class="pagination-wrap">
                      <div class="pagination">
                      {{ paginate | default_pagination | replace: 'Previous', 'Newer' | replace: 'Next', 'Older' }}
                      </div>
                  </div>
                  {% endif %}

                  {% endpaginate %}
          

            </div>

  	</section>
</div>
